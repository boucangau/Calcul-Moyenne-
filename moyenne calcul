<body>
    <div class="container">
        <h1>Calculateur de Moyenne</h1>
        <div id="matiere-container"></div>

        <button onclick="ajouterMatiere()">Ajouter une Matière</button>
        <button onclick="calculerMoyenne()">Calculer la Moyenne Générale</button>

        <h2>Moyenne Générale: <span id="moyenne-generale">0</span></h2>
    </div>

    <script src="script.js"></script>
